<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/fFont_color_ffffff</item>
    </style>

    <style name="fText.XLarge" parent="fText">
        <item name="android:textSize">@dimen/x_large</item>
    </style>

    <style name="fText.Small" parent="fText">
        <item name="android:textSize">@dimen/small</item>
    </style>

    <!-- 底部显示，没有标题，点击外部隐藏，Outside为半透明 -->
    <style name="DownShowDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/DownShowAnimation</item>
    </style>

    <style name="DownShowAnimation" parent="@android:style/Animation">
        <!--窗体进入动画-->
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_enter</item>
        <!--窗体退出动画-->
        <item name="android:windowExitAnimation">@anim/dialog_bottom_exit</item>
    </style>

    <!-- 水平分割线 -->
    <style name="horizontal_dividing_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/dividing_line_colorD</item>
    </style>

    <!-- 基本TextView 的样式 -->
    <style name="tText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/tFont_color_333333</item>
    </style>

    <style name="tText.Normal" parent="tText">
        <item name="android:textSize">@dimen/normal</item>
    </style>

    <style name="tText.Large" parent="tText">
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="themeText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/app_theme</item>
    </style>

    <style name="themeText.Normal" parent="themeText">
        <item name="android:textSize">@dimen/normal</item>
    </style>

    <style name="BaseDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/lucency_white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
