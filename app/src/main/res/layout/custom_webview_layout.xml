<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/app_content">

        <TextView
            android:id="@+id/store_name_txt"
            style="@style/tText.Large"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/title_bar_home"
            android:layout_toRightOf="@+id/back_container"
            android:gravity="center"
            android:singleLine="true"

            />

        <LinearLayout
            android:id="@+id/back_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/title_bar_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_selector_transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_title_bar_back_black"/>

            <ImageView
                android:id="@+id/close_btn"
                style="@style/tText.Normal"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingRight="@dimen/separation_normal"
                android:background="@drawable/btn_selector_transparent"
                android:scaleType="centerInside"
                android:gravity="center"
                android:visibility="gone"
                android:src="@mipmap/ic_title_bar_close"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/title_bar_home"
            style="@style/themeText.Normal"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_selector_transparent"
            android:paddingLeft="@dimen/content_margin"
            android:paddingRight="@dimen/content_margin"
            android:src="@drawable/ic_web_view_menu"
            android:text="首页"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View style="@style/horizontal_dividing_line"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:progressDrawable="@drawable/progress_webview"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/web_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>